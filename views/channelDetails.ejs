<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title><%= channel.title %> - Channel Details</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"/>
  <style>
    /* Loader Styles */
    #loader-wrapper {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: #ffffff;
      display: flex;
      justify-content: center;
      align-items: center;
      z-index: 9999;
    }

    #loader {
      border: 6px solid #f3f3f3;
      border-top: 6px solid red;
      border-radius: 50%;
      width: 50px;
      height: 50px;
      animation: spin 1s linear infinite;
    }

    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }

    body {
      background: #ffffff;
      color: #000000;
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
    }

    .navbar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      height: 80px;
      width: 100%;
      background: #ffffff;
      border-bottom: 1px solid #ddd;
      position: sticky;
      top: 0;
      z-index: 100;
    }

    .navbar-left, .navbar-center, .navbar-right {
      display: flex;
      align-items: center;
    }

    .navbar-left .logo {
      margin-left: 10px;
      font-size: 22px;
      color: rgb(255, 5, 5);
    }

    .navbar-center input {
      width: 700px;
      height: 40px;
      border: 2px solid #000000;
      border-radius: 20px 0 0 20px;
      background-color: #fffafa;
      text-align: center;
      outline: none;
    }

    .navbar-center button {
      height: 40px;
      width: 40px;
      border: 2px solid #000000;
      border-left: none;
      background-color: #ffffff;
      border-radius: 0 20px 20px 0;
      cursor: pointer;
    }

    .navbar-right i {
      font-size: 20px;
      margin-left: 15px;
      cursor: pointer;
    }

    .main {
      display: flex;
    }

    .sidebar {
      width: 200px;
      padding: 20px 10px;
      background: #ffffff;
      height: calc(100vh - 60px);
      border-right: 1px solid #ddd;
      position: sticky;
      top: 60px;
    }

    .sidebar ul {
      list-style: none;
      color: black;
      position: relative;
      left: 25%;
      top: 2%;
      padding: 0;
    }

    .sidebar li {
      margin-bottom: 20px;
      font-size: 16px;
      cursor: pointer;
    }

    .container {
      flex: 1;
      padding: 40px 20px;
    }

    .banner {
      width: 100%;
      max-height: 250px;
      object-fit: cover;
      border-radius: 10px;
      margin-bottom: 20px;
    }

    .channel-info {
      display: flex;
      align-items: center;
      gap: 20px;
      flex-wrap: wrap;
      background-color: #f5f5f5;
      padding: 20px;
      border-radius: 10px;
      margin-bottom: 30px;
      border: 1px solid #ccc;
    }

    .channel-info img {
      width: 100px;
      height: 100px;
      border-radius: 50%;
      border: 2px solid red;
    }

    .channel-meta h2 {
      font-size: 26px;
      color: #000;
    }

    .stats {
      margin-top: 10px;
      color: #444;
    }

    .desc {
      background-color: #f9f9f9;
      padding: 20px;
      border-radius: 10px;
      border: 1px solid #ccc;
      margin-bottom: 40px;
    }

    .desc h3 {
      margin-bottom: 10px;
    }

    .video-section {
      margin-top: 40px;
    }

    .video-section h3 {
      font-size: 22px;
      margin-bottom: 20px;
    }

    .videos {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
      gap: 20px;
    }

    .video-card {
      background: #f5f5f5;
      border-radius: 10px;
      overflow: hidden;
      border: 1px solid #ccc;
      transition: transform 0.2s ease;
    }

    .video-card:hover {
      transform: scale(1.03);
    }

    .video-card img {
      width: 100%;
      height: 150px;
      object-fit: cover;
    }

    .video-card h4 {
      padding: 10px;
      font-size: 16px;
      color: #000;
    }

    a {
      text-decoration: none;
      color: inherit;
    }

    @media (max-width: 768px) {
      .main {
        flex-direction: column;
      }

      .sidebar {
        width: 100%;
        padding-left: 10px;
      }

      .channel-info {
        flex-direction: column;
        align-items: flex-start;
      }

      .channel-meta h2 {
        font-size: 22px;
      }

      .video-card h4 {
        font-size: 14px;
      }
    }
  </style>
</head>
<body>

  <!-- Loader -->
  <div id="loader-wrapper">
    <div id="loader"></div>
  </div>

  <!-- ðŸ”º Navbar -->
  <nav class="navbar">
    <div class="navbar-left">
      <h2 class="logo"><i class="fab fa-youtube"></i> V-YouTube</h2>
    </div>
    <div class="navbar-center">
      <form action="/genratevideos" method="GET">
        <input type="text" name="search" placeholder="Search" />
        <button type="submit"><i class="fas fa-search"></i></button>
      </form>
    </div>
    <div class="navbar-right">
      <i class="fas fa-kvideo"></i>
      <i class="fas fa-lbell"></i>
      <a href="/profile"><i class="fas fa-user-circle"></i></a>
    </div>
  </nav>

  <!-- ðŸ§­ Sidebar + Content -->
  <div class="main">
    <!-- Sidebar -->
    <aside class="sidebar">
      <ul>
        <li><i class="fas fa-home" style="color: black;"></i> <a href="/home">Home</a></li>
        <li><i class="fas fa-photo-video" style="color: black;"></i> <a href="/shorts">Shorts</a></li>
        <li><i class="fas fa-folder" style="color: black;"></i> <a href="/library" target="_blank">Library</a></li>
        <li><i class="fab fa-youtube" style="color: black;"></i> <a href="/subscribe" target="_blank">Subscribed</a></li>
        <li><i class="fas fa-user" style="color: black;"></i> <a href="/profile" target="_blank">Profile</a></li>
      </ul>
    </aside>

    <!-- Content -->
    <div class="container">
      <% if (channel.banner) { %>
        <img src="<%= channel.banner %>" class="banner" alt="Channel Banner">
      <% } %>

      <div class="channel-info">
        <img src="<%= channel.thumbnail %>" alt="Channel Thumbnail" />
        <div class="channel-meta">
          <h2><%= channel.title %></h2>
          <div class="stats">
            <p>Subscribers: <%= channel.subs %></p>
            <p>Total Views: <%= channel.views %></p>
            <p>Videos: <%= channel.videos %></p>
          </div>
        </div>
      </div>

      <div class="desc">
        <h3>Description</h3>
        <p><%= channel.description %></p>
      </div>

      <div class="video-section">
        <h3>Recent Videos</h3>
        <div class="videos">
          <% if (videos.length > 0) { %>
            <% videos.forEach(video => { %>
              <div class="video-card">
                <a href="https://www.youtube.com/watch?v=<%= video.videoId %>" target="_blank">
                  <img src="<%= video.thumbnail %>" alt="<%= video.title %> Thumbnail" />
                  <h4><%= video.title %></h4>
                </a>
              </div>
            <% }) %>
          <% } else { %>
            <p>No videos found for this channel.</p>
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <!-- JavaScript to hide loader -->
  <script>
    window.addEventListener("load", () => {
      const loader = document.getElementById("loader-wrapper");
      loader.style.display = "none";
    });
  </script>

</body>
</html>
