<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>YouTube Shorts</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    /* Reset & Base */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: Arial, sans-serif;
      background: #ffffff;
      color: rgb(0, 0, 0);
    }

    /* Navbar */
    .navbar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      height: 80px;
      width: 100%;
      background: #ffffff;
      border-bottom: 1px solid #33333300;
      position: sticky;
      top: 0;
      z-index: 100;
    }

    .navbar-left, .navbar-center, .navbar-right {
      display: flex;
      align-items: center;
    }

    .navbar-left .logo {
      margin-left: 10px;
      font-size: 22px;
      color: rgb(255, 5, 5);
    }

    .navbar-center input {
      width: 700px;
      height: 40px;
      border: 2px solid #000000;
      border-radius: 20px 0 0 20px;
      background-color: #aa9b9b00;
      text-align: center;
      outline: none;
    }

    .navbar-center button {
      height: 40px;
      width: 40px;
      border: 2px solid #000000;
      border-left: none;
      background-color: #ffffff;
      border-radius: 0 20px 20px 0;
      cursor: pointer;
    }

    .navbar-right i {
      font-size: 20px;
      margin-left: 15px;
      cursor: pointer;
    }

    /* Main Layout */
    .main {
      display: flex;
    }

    /* Sidebar */
    .sidebar {
      width: 200px;
      padding: 20px 10px;
      background: #ffffff;
      height: calc(100vh - 60px);
      border-right: 1px solid #333;
      position: sticky;
      top: 60px;
    }

    .sidebar ul {
      list-style: none;
      position: relative;
      left: 25%;
      top: 2%;
    }

    .sidebar li {
      margin-bottom: 20px;
      font-size: 16px;
      cursor: pointer;
      color: rgb(0, 0, 0);
    }

    .sidebar a {
      text-decoration: none;
      color: rgb(0, 0, 0);
    }

    /* Shorts Viewer */
    .videos {
      flex: 1;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 20px;
      height: 100vh;
      position: relative;
    }

    .shorts-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      width: 360px; /* Fixed width */
      max-width: 100%;
    }

    .video-wrapper {
      position: relative;
      width: 100%;
      padding-top: 177.78%; /* 9:16 aspect ratio (9/16*100) */
      border-radius: 12px;
      overflow: hidden;
      background: #000;
    }

    .shorts-container iframe {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      border: none;
    }

    .info {
      width: 100%;
      margin-top: 10px;
      text-align: center;
      color: black;
    }

    .info h3 {
      font-size: 18px;
      margin-bottom: 5px;
    }

    .info p {
      font-size: 14px;
      color: gray;
    }

    /* Action Buttons */
    .action-buttons {
      display: flex;
      gap: 20px;
      margin-top: 15px;
      justify-content: center;
    }

    .action-button {
      width: 50px;
      height: 50px;
      border-radius: 50%;
      background-color: rgba(82, 65, 65, 0.2);
      border: none;
      color: black;
      font-size: 20px;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.3s;
    }

    .action-button.liked {
      background-color: rgba(0, 255, 0, 0.2);
      color: green;
    }

    .action-button.disliked {
      background-color: rgba(255, 0, 0, 0.2);
      color: red;
    }

    /* Navigation Buttons */
    .nav-buttons {
      position: absolute;
      right: 50px;
      display: flex;
      flex-direction: column;
      gap: 20px;
    }

    .nav-button {
      width: 50px;
      height: 50px;
      border-radius: 50%;
      background-color: rgba(82, 65, 65, 0.589);
      border: none;
      color: white;
      font-size: 20px;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: background-color 0.3s;
    }
  </style>
</head>
<body>

  <!-- ðŸ”º Navbar -->
  <nav class="navbar">
    <div class="navbar-left">
      <h2 class="logo"><i class="fab fa-youtube"></i> V-YouTube</h2>
    </div>
    <div class="navbar-center">
      <form action="/" method="GET">
        <input type="text" name="search" placeholder="Search" />
        <button type="submit"><i class="fas fa-search"></i></button>
      </form>
    </div>
    <div class="navbar-right">
      <i class="fas fa-kvideo"></i>
      <i class="fas fa-lbell"></i>
      <a href="/profile"><i class="fas fa-user-circle"></i></a>
    </div>
  </nav>

  <!-- ðŸ§­ Sidebar + Shorts Section -->
  <div class="main">
    <aside class="sidebar">
      <ul>
        <li><i class="fas fa-home"></i> <a href="/home">Home</a></li>
        <li><i class="fas fa-photo-video"></i> <a href="/shorts">Shorts</a></li>
        <li><i class="fas fa-folder"></i> <a href="/library">Library</a></li>
        <li><i class="fab fa-youtube" style="color: black;"></i> <a href="/subscribe" target="_blank">Subscribed</a></li>
        <li><i class="fas fa-user"></i> <a href="/profile">Profile</a></li>
      </ul>
    </aside>

    <!-- ðŸ“± Shorts Viewer -->
    <section class="videos">
      <div class="nav-buttons">
        <button class="nav-button" id="upButton"><i class="fas fa-arrow-up"></i></button>
        <button class="nav-button" id="downButton"><i class="fas fa-arrow-down"></i></button>
      </div>
      
      <div class="shorts-container">
        <div class="video-wrapper">
          <iframe id="shortPlayer" allow="autoplay; encrypted-media" allowfullscreen></iframe>
        </div>
        <div class="info">
          <h3 id="title"></h3>
          <p id="channel"></p>
          <div class="action-buttons">
            <button class="action-button" id="likeButton"><i class="fas fa-thumbs-up"></i></button>
            <button class="action-button" id="dislikeButton"><i class="fas fa-thumbs-down"></i></button>
          </div>
        </div>
      </div>
    </section>
  </div>

  <!-- ðŸ” Script -->
  <script>
    const videos = <%- JSON.stringify(videos) %>;
    let index = 0;

    const iframe = document.getElementById('shortPlayer');
    const title = document.getElementById('title');
    const channel = document.getElementById('channel');
    const upButton = document.getElementById('upButton');
    const downButton = document.getElementById('downButton');
    const likeButton = document.getElementById('likeButton');
    const dislikeButton = document.getElementById('dislikeButton');

    function loadVideo(i) {
      const video = videos[i];
      const id = video.id.videoId || video.id;
      // Added loop=1 parameter to make video loop and removed showinfo=0 which showed YouTube branding
      const embedUrl = `https://www.youtube.com/embed/${id}?autoplay=1&mute=0&rel=0&controls=1&modestbranding=1&loop=1&playlist=${id}`;

      iframe.src = embedUrl;
      title.textContent = video.snippet.title;
      channel.textContent = `@${video.snippet.channelTitle}`;
      // Reset like/dislike buttons when new video loads
      likeButton.classList.remove('liked');
      dislikeButton.classList.remove('disliked');
    }

    loadVideo(index);

    upButton.addEventListener('click', () => {
      if (index > 0) {
        index--;
        loadVideo(index);
      }
    });

    downButton.addEventListener('click', () => {
      if (index < videos.length - 1) {
        index++;
        loadVideo(index);
      }
    });

    // Like button functionality
    likeButton.addEventListener('click', () => {
      likeButton.classList.toggle('liked');
      if (likeButton.classList.contains('liked')) {
        dislikeButton.classList.remove('disliked');
      }
    });

    // Dislike button functionality
    dislikeButton.addEventListener('click', () => {
      dislikeButton.classList.toggle('disliked');
      if (dislikeButton.classList.contains('disliked')) {
        likeButton.classList.remove('liked');
      }
    });

    // Listen for video end to restart playback
    window.addEventListener('message', (event) => {
      if (event.data === 'ended') {
        iframe.contentWindow.postMessage('{"event":"command","func":"playVideo","args":""}', '*');
      }
    });
  </script>

</body>
</html>